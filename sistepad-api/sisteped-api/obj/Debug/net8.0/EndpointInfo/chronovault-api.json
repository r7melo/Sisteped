{
  "openapi": "3.0.1",
  "info": {
    "title": "ChronoVault API",
    "version": "v1"
  },
  "paths": {
    "/api/Order/{id}/details": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Obtém um pedido por ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do pedido.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna o pedido encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponseDetailsDTO"
                }
              }
            }
          },
          "404": {
            "description": "Se o pedido não for encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Order/from-user/{id}": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Obtém todos os pedidos.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna a lista de pedidos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderResponseDTO"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Order/create": {
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "Cria um novo pedido.",
        "requestBody": {
          "description": "Dados para a criação do pedido.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderCreateDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderCreateDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/OrderCreateDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Retorna o pedido criado.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponseDetailsDTO"
                }
              }
            }
          },
          "400": {
            "description": "Se a validação falhar ou a criação não for possível.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
