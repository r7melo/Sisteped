#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<NavButton@Button>:
    size_hint_y: 1        # cada botão ocupa espaço proporcional igual
    background_color: 0, 0.5, 1, 1
    color: 1, 1, 1, 1
    font_size: 16
    bold: True

<MainLayout>:
    orientation: 'horizontal'

    # Lateral esquerda (menu de navegação)
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size

        # Cada botão ocupa parte igual da altura total
        NavButton:
            text: 'Dashboard'
            background_color: 0.9, 0.9, 0.9, 1    # cinza claro
            color: 0, 0, 0, 1
            on_press: root.change_screen('dashboard')

        NavButton:
            text: 'Alunos'
            background_color: 0.8, 0.95, 1, 1     # azul claro
            color: 0, 0, 0, 1
            on_press: root.change_screen('alunos')

        NavButton:
            text: 'Disciplinas'
            background_color: 0.9, 0.85, 1, 1     # lilás
            color: 0, 0, 0, 1
            on_press: root.change_screen('disciplinas')

        NavButton:
            text: 'Notas'
            background_color: 1, 0.9, 0.8, 1       # laranja claro
            color: 0, 0, 0, 1
            on_press: root.change_screen('notas')

    # Área principal (conteúdo das telas)
    ScreenManager:
        id: screen_manager
        transition: FadeTransition(duration=0.3)

        DashboardScreen:
            name: 'dashboard'
        AlunosScreen:
            name: 'alunos'
        DisciplinasScreen:
            name: 'disciplinas'
        NotasScreen:
            name: 'notas'
